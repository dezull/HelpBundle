<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="dezull_help.image.dir">%kernel.root_dir%/../web/upload/help</parameter>
        <parameter key="dezull_help.image.baseurl">/upload/help</parameter>
        <parameter key="dezull_help.image.mimetypes" type="collection">
            <parameter>image/png</parameter>
            <parameter>image/jpeg</parameter>
            <parameter>image/gif</parameter>
        </parameter>

        <parameter key="dezull_help.topic.type.class">Dezull\Bundle\HelpBundle\Form\HelpTopicType</parameter>
    </parameters>

    <services>
        <service id="dezull_help.topic.type" class="%dezull_help.topic.type.class%">
            <tag name="form.type" alias="ckeditor" />
            <argument type="service" id="service_container" />
        </service>
    </services>
</container>
