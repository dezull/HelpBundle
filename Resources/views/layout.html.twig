<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Help Browser{% endblock %}</title>
        {% block stylesheets %}
            <link href="{{ asset('bundles/dezullhelp/css/layout.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="bodyWrapper">
            <a id="topAnchor" href="#header">top</a>
            <div id="header">
                {% block header %}
                    <h1>Documentation</h1>
                {% endblock %}
            </div>
            <div id="contentWrapper">
                {% block contentWrapper %}
                    <div id="sidebarGradient"></div>
                    <div id="sidebar">
                        {% block sidebar %}
                            {% render "DezullHelpBundle:Browser:topicTree" %}
                        {% endblock %}
                    </div>
                    <div id="content">
                        {% block content %}{% endblock %}
                    </div>
                {% endblock %}
            </div>
            <div id="footer">
                {% block footer %}
                    <div>Copyright &copy;</div>
                {% endblock %}
            </div>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
